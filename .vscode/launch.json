    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "run mini-lang",
            "cargo": {
                "args": [
                    "build",
                    "--bin=mini-lang",
                    "--package=mini-lang",
                    // "--release",
                ],
                "filter": {
                    "name": "mini-lang",
                    "kind": "bin",
                }
            },
            "args": ["C:/Mine/Rust/mini-lang/demo-project", "--run"],
            // "args": ["C:/Mine/Rust/mini-lang/empty-project", "--run"],
            "cwd": "${workspaceFolder}",
            "env": {"RUST_BACKTRACE": "1"}
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "test mini-lang",
            "cargo": {
                "args": [
                    "build",
                    "--bin=mini-lang",
                    "--package=mini-lang",
                ],
                "filter": {
                    "name": "mini-lang",
                    "kind": "bin",
                }
            },
            "args": ["C:/Mine/Rust/mini-lang/demo-project", "--test_compiler"],
            "cwd": "${workspaceFolder}",
            "env": {"RUST_BACKTRACE": "1"}
        },
